/* pages/my-stats/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

/* Stats Cards */
.stats-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stats-card {
  flex: 1;
  background: var(--bg-card);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.stats-number.highlight {
  color: var(--primary-color);
}

.stats-number.warning {
  color: #ff6b6b;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Warning Banner */
.warning-banner {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 107, 107, 0.15);
  border: 1rpx solid rgba(255, 107, 107, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 30rpx;
}

.warning-icon {
  font-size: 32rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #ff6b6b;
}

/* Section Card */
.section-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

/* Bar Chart */
.chart-bar-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.chart-bar-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.bar-label {
  width: 80rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.bar-track {
  flex: 1;
  height: 24rpx;
  background: var(--primary-dark);
  border-radius: 12rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color) 0%, #9acd32 100%);
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.bar-value {
  width: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: right;
}

/* Activity Types */
.type-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.type-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-icon {
  font-size: 36rpx;
  width: 50rpx;
  text-align: center;
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.type-bar-track {
  height: 12rpx;
  background: var(--primary-dark);
  border-radius: 6rpx;
  overflow: hidden;
}

.type-bar-fill {
  height: 100%;
  background: var(--primary-color);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.type-percentage {
  width: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
  text-align: right;
}

/* Summary Card */
.summary-card {
  background: linear-gradient(135deg, var(--bg-card) 0%, #2a2a2a 100%);
  border-left: 6rpx solid var(--primary-color);
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.summary-row:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.summary-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.summary-value.highlight {
  color: var(--primary-color);
  font-size: 32rpx;
}

/* Activity Timeline */
.activity-timeline {
  display: flex;
  flex-direction: column;
}

.timeline-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.timeline-item:last-child {
  border-bottom: none;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: var(--primary-color);
  margin-top: 8rpx;
  flex-shrink: 0;
}

.timeline-dot.attended {
  background: var(--primary-color);
}

.timeline-dot.cancelled {
  background: #ff6b6b;
}

.timeline-dot.upcoming {
  background: #4a9eff;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.timeline-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-date {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.timeline-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.timeline-status.attended {
  background: rgba(204, 255, 0, 0.15);
  color: var(--primary-color);
}

.timeline-status.cancelled {
  background: rgba(255, 107, 107, 0.15);
  color: #ff6b6b;
}

.timeline-status.upcoming {
  background: rgba(74, 158, 255, 0.15);
  color: #4a9eff;
}

.empty-timeline {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}


