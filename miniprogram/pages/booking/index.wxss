/* pages/booking/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 180rpx;
}

/* 活动信息 */
.activity-info {
  background: linear-gradient(135deg, var(--bg-card) 0%, #2a2a2a 100%);
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 30rpx;
  border-left: 6rpx solid var(--primary-color);
}

.activity-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.activity-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
}

/* 表单卡片 */
.form-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.form-input {
  background: var(--primary-dark);
  border: 1rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: var(--text-primary);
}

.placeholder {
  color: var(--text-secondary);
}

/* Phone authorization */
.phone-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.phone-value {
  flex: 1;
  background: var(--primary-dark);
  border: 1rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: var(--text-primary);
}

.btn-get-phone {
  flex: 1;
  background: transparent;
  border: 2rpx dashed var(--primary-color);
  color: var(--primary-color);
  font-size: 28rpx;
  padding: 22rpx 24rpx;
  border-radius: 16rpx;
  line-height: 1.4;
  text-align: center;
}

.btn-get-phone::after {
  border: none;
}

.btn-change-phone {
  background: transparent;
  border: 1rpx solid var(--border-color);
  color: var(--text-secondary);
  font-size: 24rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  line-height: 1.2;
}

.btn-change-phone::after {
  border: none;
}

/* 费用明细 */
.fee-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.fee-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.fee-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.fee-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.fee-value {
  font-size: 28rpx;
  color: var(--text-primary);
}

.fee-total {
  border-top: 1rpx solid var(--border-color);
  margin-top: 16rpx;
  padding-top: 24rpx;
}

.fee-value.total {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}

/* 协议 */
.agreement {
  text-align: center;
  margin-top: 30rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.agreement-link {
  font-size: 26rpx;
  color: var(--primary-color);
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-color);
}

.total-info {
  display: flex;
  flex-direction: column;
}

.total-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.total-amount {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.btn-submit {
  background: var(--primary-color);
  color: var(--primary-dark);
  padding: 28rpx 80rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-submit:active {
  opacity: 0.8;
}

.btn-submit.btn-disabled {
  background: var(--border-color);
  color: var(--text-secondary);
}


