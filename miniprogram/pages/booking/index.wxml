<!--pages/booking/index.wxml-->
<view class="container">
  <!-- 活动信息 -->
  <view class="activity-info">
    <view class="activity-title">{{activityTitle}}</view>
    <view class="activity-price">
      <text class="price-label">费用：</text>
      <text class="price-value">¥{{price}}</text>
    </view>
  </view>

  <!-- 报名表单 -->
  <view class="form-card">
    <view class="form-title">报名信息</view>
    
    <!-- 姓名 -->
    <view class="form-item">
      <view class="form-label">姓名</view>
      <input 
        class="form-input"
        type="text"
        placeholder="请输入您的姓名"
        placeholder-class="placeholder"
        value="{{name}}"
        bindinput="onNameInput"
      />
    </view>

    <!-- 手机号 -->
    <view class="form-item">
      <view class="form-label">手机号</view>
      <view class="phone-input-wrap">
        <input 
          class="form-input"
          type="number"
          placeholder="请输入手机号"
          placeholder-class="placeholder"
          maxlength="11"
          value="{{phone}}"
          bindinput="onPhoneInput"
        />
        <button 
          class="btn-get-phone"
          open-type="getPhoneNumber"
          bindgetphonenumber="getPhoneNumber"
        >
          快速填写
        </button>
      </view>
    </view>
  </view>

  <!-- 费用明细 -->
  <view class="fee-card">
    <view class="fee-title">费用明细</view>
    <view class="fee-item">
      <text class="fee-label">活动费用</text>
      <text class="fee-value">¥{{price}}</text>
    </view>
    <view class="fee-item fee-total">
      <text class="fee-label">合计</text>
      <text class="fee-value total">¥{{price}}</text>
    </view>
  </view>

  <!-- 协议 -->
  <view class="agreement">
    <text class="agreement-text">点击报名即表示同意</text>
    <text class="agreement-link">《活动报名协议》</text>
  </view>
</view>

<!-- 底部按钮 -->
<view class="bottom-bar">
  <view class="total-info">
    <text class="total-label">应付金额</text>
    <text class="total-amount">¥{{price}}</text>
  </view>
  <view 
    class="btn-submit {{submitting ? 'btn-disabled' : ''}}"
    bindtap="submitBooking"
  >
    {{submitting ? '提交中...' : '确认报名'}}
  </view>
</view>

