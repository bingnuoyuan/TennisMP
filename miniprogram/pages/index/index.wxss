/* pages/index/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.subtitle {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  letter-spacing: 2rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 空状态 */
.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 活动列表 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
}

.activity-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.activity-card:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-bottom-left-radius: 16rpx;
}

.tag-open {
  background: var(--primary-color);
  color: var(--primary-dark);
}

.tag-closed {
  background: var(--text-secondary);
  color: var(--primary-dark);
}

/* 活动信息 */
.activity-info {
  margin-bottom: 24rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  padding-right: 120rpx;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

/* Custom Calendar Icon */
.calendar-icon {
  width: 36rpx;
  height: 40rpx;
  border: 2rpx solid #555555;
  border-radius: 6rpx;
  margin-right: 12rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #1a1a1a;
}

.calendar-icon .calendar-header {
  height: 12rpx;
  background: #E53935;
}

.calendar-icon .calendar-day {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.meta-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 价格 */
.activity-price {
  display: flex;
  align-items: baseline;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--border-color);
}

.price-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-right: 12rpx;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
}




