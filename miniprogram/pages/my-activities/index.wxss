/* pages/my-activities/index.wxss */

.container {
  padding: 30rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 空状态 */
.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.btn-go {
  background: var(--primary-color);
  color: var(--primary-dark);
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* 活动列表 */
.activity-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.activity-card:active {
  opacity: 0.9;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.activity-title {
  flex: 1;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-right: 20rpx;
}

.activity-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.status-success {
  background: var(--primary-color);
  color: var(--primary-dark);
}

.status-default {
  background: var(--border-color);
  color: var(--text-secondary);
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 26rpx;
  margin-right: 10rpx;
}

.meta-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.order-info {
  display: flex;
  align-items: center;
}

.order-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.order-value {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.order-price {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}


