/* pages/activity-detail/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 180rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 活动头部 */
.activity-header {
  margin-bottom: 30rpx;
}

.status-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.tag-open {
  background: var(--primary-color);
  color: var(--primary-dark);
}

.tag-closed {
  background: var(--text-secondary);
  color: var(--primary-dark);
}

.activity-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.3;
}

/* 信息卡片 */
.info-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 6rpx;
}

.info-value {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.info-value.price {
  color: var(--primary-color);
  font-weight: 700;
}

.people-current {
  color: var(--primary-color);
  font-weight: 700;
}

.people-divider {
  color: var(--text-secondary);
  margin: 0 8rpx;
}

.people-max {
  color: var(--text-secondary);
}

/* 描述卡片 */
.desc-card,
.notice-card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.desc-content {
  font-size: 30rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-color);
}

.price-info {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-right: 8rpx;
}

.price-amount {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.btn-register {
  background: var(--primary-color);
  color: var(--primary-dark);
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-register:active {
  opacity: 0.8;
}

.btn-register.btn-disabled {
  background: var(--border-color);
  color: var(--text-secondary);
}

