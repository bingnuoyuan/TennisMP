/* app.wxss - 全局样式 */

/* 主题色变量 */
page {
  --primary-color: #CCFF00;
  --primary-dark: #111111;
  --text-primary: #FFFFFF;
  --text-secondary: #999999;
  --bg-dark: #1A1A1A;
  --bg-card: #222222;
  --border-color: #333333;
  --success-color: #07C160;
  --warning-color: #FFC107;
  --danger-color: #FA5151;
  
  background-color: var(--primary-dark);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-card);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: var(--primary-dark);
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

/* 文字样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-accent {
  color: var(--primary-color);
}

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 间距 */
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.p-30 { padding: 30rpx; }


