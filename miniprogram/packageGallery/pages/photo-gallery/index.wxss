/* pages/photo-gallery/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* Loading */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(204, 255, 0, 0.2);
  border-top-color: #CCFF00;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #888;
  font-size: 28rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-hint {
  color: #666;
  font-size: 28rpx;
}

/* Albums */
.albums {
  padding-bottom: 40rpx;
}

/* Album Card */
.album-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

/* Album Header */
.album-header {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  background: rgba(204, 255, 0, 0.05);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.album-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.album-info {
  flex: 1;
}

.album-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.album-subtitle {
  color: #888;
  font-size: 24rpx;
}

.album-count {
  color: #CCFF00;
  font-size: 24rpx;
  background: rgba(204, 255, 0, 0.15);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* Photo Grid */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx;
}

.photo-item {
  width: calc(33.333% - 8rpx);
  aspect-ratio: 1;
  margin: 4rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.photo-image {
  width: 100%;
  height: 100%;
  display: block;
  background: #2a2a2a;
}

/* Hover effect */
.photo-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* Bottom Tip */
.bottom-tip {
  text-align: center;
  padding: 30rpx;
  color: #555;
  font-size: 24rpx;
}

/* Preview Modal */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.95);
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx 30rpx;
}

.preview-counter {
  color: #fff;
  font-size: 32rpx;
}

.preview-close {
  color: #fff;
  font-size: 48rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-swiper {
  flex: 1;
  width: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-tip {
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 24rpx;
}

